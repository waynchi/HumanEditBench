from flask import Flask
from datetime import datetime

app = Flask(__name__)

@app.route('/')
def show_datetime():
    current_time = datetime.now()
    formatted_time = current_time.strftime("%Y年%m月%d日 %H:%M:%S")
    return f"<h1>当前日期和时间</h1><p>{formatted_time}</p>"

if __name__ == '__main__':
    app.run(debug=True)