def is_prime(n):
    """
    Return True if n is a prime number, otherwise False.
    Accepts integers; floats that are whole numbers are treated as that integer.
    """
    # Normalize input to an int when possible
    if isinstance(n, bool):
        return False
    if not isinstance(n, int):
        if isinstance(n, float) and n.is_integer():
            n = int(n)
        else:
            return False

    if n <= 1:
        return False
    if n <= 3:
        return True
    if n % 2 == 0 or n % 3 == 0:
        return False

    i = 5
    while i * i <= n:
        if n % i == 0 or n % (i + 2) == 0:
            return False
        i += 6
    return True