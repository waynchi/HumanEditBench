def four_square_sum(n):
    """
    Checks if a number can be expressed as the sum of four non-zero squares.

    Args:
        n: The number to check.

    Returns:
        True if the number can be expressed as the sum of four non-zero squares, False otherwise.
    """
    if n <= 0:
        return False

    for i in range(1, int(n**0.5) + 1):
        for j in range(1, int(n**0.5) + 1):
            for k in range(1, int(n**0.5) + 1):
                for l in range(1, int(n**0.5) + 1):
                    if i*i + j*j + k*k + l*l == n:
                        return True
    return False