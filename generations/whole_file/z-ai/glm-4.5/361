python
import math

def is_sum_of_four_nonzero_squares(n):
    if n < 4:
        return False
    max_a = math.isqrt(n)
    for a in range(1, max_a + 1):
        rem1 = n - a * a
        if rem1 < 3:  # Minimum sum of three non-zero squares is 1+1+1=3
            break
        max_b = math.isqrt(rem1)
        for b in range(1, max_b + 1):
            rem2 = rem1 - b * b
            if rem2 < 2:  # Minimum sum of two non-zero squares is 1+1=2
                break
            max_c = math.isqrt(rem2)
            for c in range(1, max_c + 1):
                rem3 = rem2 - c * c
                if rem3 < 1:  # Minimum non-zero square is 1
                    break
                d = math.isqrt(rem3)
                if d * d == rem3 and d >= 1:
                    return True
    return False