from flask import Flask, render_template_string
from datetime import datetime

app = Flask(__name__)

HTML_TEMPLATE = """
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Current Date and Time</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Refresh every second to keep time current -->
    <meta http-equiv="refresh" content="1">
    <style>
      body {
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
        margin: 0;
        padding: 2rem;
        background: #f7f7f8;
        color: #222;
      }
      .card {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 24px rgba(0,0,0,0.08);
        padding: 2rem;
        text-align: center;
      }
      h1 {
        margin: 0 0 1rem 0;
        font-size: 1.75rem;
      }
      .time {
        font-variant-numeric: tabular-nums;
        font-size: 2rem;
        letter-spacing: 0.02em;
      }
      .sub {
        margin-top: 0.5rem;
        color: #666;
        font-size: 0.95rem;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <h1>Current Date and Time</h1>
      <div class="time">{{ now_str }}</div>
      <div class="sub">Server local time</div>
    </div>
  </body>
</html>
"""

@app.route("/")
def index():
    now = datetime.now()
    now_str = now.strftime("%Y-%m-%d %H:%M:%S")
    return render_template_string(HTML_TEMPLATE, now_str=now_str)

if __name__ == "__main__":
    # Host 0.0.0.0 to allow access from other devices on the network if needed.
    app.run(host="0.0.0.0", port=5000, debug=True)