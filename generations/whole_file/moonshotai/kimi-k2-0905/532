    ]
}

logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)

def select_random_user_agent() -> str:
    """Seleccionar aleatoriamente una cadena de agente de usuario de entre todas las disponibles."""
    all_agents = [agent for agents in USER_AGENTS.values() for agent in agents]
    return random.choice(all_agents)

async def fetch_vqd() -> dict:
    """Obtener el token VQD requerido para la autenticación."""
    user_agent = select_random_user_agent()
    async with httpx.AsyncClient() as client:
        response = await client.get(
            STATUS_URL,
            headers={
                "User-Agent": user_agent,
                "x-vqd-accept": "1",
            },
        )
        if response.status_code != 200:
            logger.error(f"Failed to fetch VQD: {response.status_code}")
            raise HTTPException(status_code=500, detail="Failed to retrieve VQD token")
        vqd_token = response.headers.get("x-vqd-4", "")
        return {"vqd": vqd_token, "user-agent": user_agent}