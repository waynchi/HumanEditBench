import numpy as np

from manim import *

class MaroAnimation(Scene):
    def construct(self):
        # Utwórz tekst
        text = Text("Maro", font_size=120)
        
        # Dodaj ładny gradient kolorów
        text.set_color_by_gradient(BLUE, PURPLE, PINK)
        
        # Utwórz sekwencję animacji
        self.play(
            Write(text),
            run_time=2,
            rate_func=smooth
        )
        
        # Dodaj delikatną animację pulsacji
        self.play(
            text.animate.scale(1.2),
            rate_func=there_and_back,
            run_time=1.5
        )
        
        # Dodaj delikatny obrót dla stylu
        self.play(
            text.animate.rotate(PI / 12).shift(UP * 0.5),
            rate_func=ease_in_out_sine,
            run_time=1
        )
        
        # Zatrzymaj ostatnią klatkę
        self.wait(2)