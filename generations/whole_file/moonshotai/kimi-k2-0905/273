import pygame
import math

# Инициализация Pygame
pygame.init()

# Настроить дисплей
screen_width = 800
screen_height = 600
screen = pygame.display.set_mode((screen_width, screen_height))
pygame.display.set_caption('Basic Screen')

# Главный цикл
running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Заполнить экран цветом (например, черным)
    screen.fill((0, 0, 0))

    # Обновить дисплей
    pygame.display.flip()

# Выйти из Pygame
pygame.quit()