import os
import time
import undetected_chromedriver as uc

# Получить каталог текущего скрипта
script_dir = os.path.dirname(os.path.abspath(__file__))

# Построить относительный путь к chromedriver
chromedriver_path = os.path.join(script_dir, "chromedriver-win64", "chromedriver.exe")

options = uc.ChromeOptions()
# Указан ПУТЬ К ДВИЖКУ (chrome.exe), а не к драйверу
options.binary_location = os.path.join(script_dir, "chrome-win64", "chrome.exe")
print("wde")
with uc.Chrome(driver_executable_path=chromedriver_path,
               use_subprocess=True, options=options) as driver:
    print("wde")
    driver.get("https://lmarena.ai/")
    print("wde")
    time.sleep(10)

# Дублирующий блок удалён – он больше не нужен