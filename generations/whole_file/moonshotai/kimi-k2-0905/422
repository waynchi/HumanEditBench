import os
# import hashlib
# import base64

project_name = "CheckerKMV"


def createLicense(secretKey: str) -> None:
    # Ścieżka do folderu projektu w %appdata%/Local
    appdata_path = os.path.join(os.environ["LOCALAPPDATA"], project_name)

    if not os.path.exists(appdata_path):
        os.makedirs(appdata_path)

    with open(os.path.join(appdata_path, "license.dat"), "w", encoding="utf-8") as f:
        f.write(secretKey)