import torch
import numpy as np
import time
from torch.utils.data import DataLoader
from transformers import TrainerCallback
from transformers.data.data_collator import default_data_collator


def check_answer_factual(output_str, expected_answer):
    """Проверяет, совпадает ли вывод модели с ожидаемым ответом.

Аргументы:
    output_str: Строка, полученная от модели
    expected_answer: Ожидаемая строка ответа

Возвращает:
    bool: True, если ответ правильный, False в противном случае"""
    # Это простая реализация - возможно, вы захотите её улучшить
    # с более сложной логикой сопоставления, основанной на ваших конкретных потребностях
    return expected_answer.lower() in output_str.lower()


def check_answer_format(output_str, hard=False):
    """Проверяет, соответствует ли вывод модели ожидаемому формату.

Аргументы:
    output_str: Строка, полученная от модели
    hard: Если True, применяется более строгая проверка формата

Возвращает:
    bool: True, если формат правильный, False в противном случае"""
    if hard:
        # Строгая проверка формата (например, должно точно соответствовать шаблону)
        # Реализуйте здесь вашу логику строгой проверки формата
        return bool(output_str.strip())  # Простая проверка, что вывод не пустой
    else:
        # Более мягкая проверка формата (например, содержит ожидаемые разделы)
        # Реализуйте здесь вашу логику мягкой проверки формата
        return len(output_str.strip()) > 0  # Простой проверка, что вывод содержит содержимое


# Определите класс FactualAccuracyCallbackBETTER (как указано)
class FactualAccuracyCallbackBETTER(TrainerCallback):
    """Обратный вызов для оценки и логирования фактической точности модели во время обучения."""

    def __init__(
        self, model, tokenizer, dataset, batch_size, verbose=False, output_format=False
    ):
        super().__init__()
        self.model = model
        self.tokenizer = tokenizer
        self.n_samp = len(dataset)
        self.verbose = verbose
        self.output_format = output_format
        tokenized_questions = dataset.map(
            lambda examples: tokenizer(
                examples["question"],
                padding="max_length",
                truncation=True,
                max_length=512,
            ),
            batched=True,
        )
        batched_tokenized_questions = DataLoader(
            tokenized_questions,
            batch_size=3,
            shuffle=False,
            collate_fn=default_data_collator,
        )
        self.tokenized_eval_dataset = batched_tokenized_questions
        self.batched_expected_answers = DataLoader(
            dataset["answer"], batch_size=3, shuffle=False
        )

    def on_log(self, args, state, control, model=None, **kwargs):
        """Вызывается после записи последних логов."""
        if model is not None:
            self.model = model
        elif self.model is None:
            return

        if not state.is_local_process_zero:
            return

        start_time = time.time()
        try:
            with torch.no_grad():
                results = factual_score_dataloader(
                    model=model,
                    tokenizer=self.tokenizer,
                    tokenized_eval_dataset=self.tokenized_eval_dataset,
                    output_format=self.output_format,
                )
                if self.output_format:
                    fact_results, format_hard_results, format_soft_results = results
                    format_hard_avg = np.mean(format_hard_results)
                    format_soft_avg = np.mean(format_soft_results)
                    factual_accuracy_avg = np.mean(fact_results)
                else:
                    factual_accuracy_avg = np.mean(results)

                if len(state.log_history) > 0:
                    state.log_history[-1]["factual_accuracy"] = factual_accuracy_avg
                    if self.output_format:
                        state.log_history[-1]["format_hard"] = format_hard_avg
                        state.log_history[-1]["format_soft"] = format_soft_avg
        except Exception as e:
            print(f"Error during factual accuracy evaluation: {e}")
        finally:
            time_taken = time.time() - start_time
            if self.verbose:
                print(
                    f"[TIME] {time_taken:.2f} seconds: Model evaluated on FactualAccuracy."
                )


def factual_score_dataloader(
    model,
    tokenizer,
    dataset,
    expected_answers,
    max_new_tokens=32,
    output_format=False,
    random_state=42,
    device=None,
    verbose=False,
):
    """
    Evaluate the factual accuracy of answers from a language model.

    Args:
        model: The language model.
        tokenizer: The tokenizer.
        tokenized_eval_dataset: The tokenized evaluation dataset.
        max_new_tokens: Maximum number of new tokens to generate.
        output_format: Whether to check output format.
        random_state: Random seed for sampling.
        device: Device to run on (defaults to CUDA if available, else CPU).

    Returns:
        fact_results: List of factual accuracy results (boolean).
        format_hard_results (optional): List of hard format check results.
        format_soft_results (optional): List of soft format check results.
    """
    if device is None:
        device = torch.device("cuda" if torch.cuda.is_available() else "cpu")
    model = model.to(device)

    all_outputs, all_expected, all_inputs = [], [], []

    # --- Пакетная генерация ---
    for batch, expected_batch in zip(dataset, expected_answers):
        batch = {k: v.to(device) for k, v in batch.items() if k in ["input_ids", "attention_mask"]}
        with torch.no_grad():
            outputs = model.generate(
                **batch,
                max_new_tokens=max_new_tokens,
                pad_token_id=tokenizer.pad_token_id
            )
        all_inputs.append(batch["input_ids"])
        all_outputs.append(outputs[:, batch["input_ids"].shape[-1]:])
        all_expected.extend(expected_batch)

    # --- Пакетная декодировка ---
    if all_inputs:
        flat_inputs = torch.cat(all_inputs, dim=0)
        flat_outputs = torch.cat(all_outputs, dim=0)
        output_strings = tokenizer.batch_decode(flat_outputs, skip_special_tokens=True)
        detokenized_inputs = tokenizer.batch_decode(flat_inputs, skip_special_tokens=True)
    else:
        output_strings, detokenized_inputs = [], []

    # --- Пакетная проверка ---
    fact_results = [check_answer_factual(out, exp) for out, exp in zip(output_strings, all_expected)]
    if output_format:
        format_hard_results = [check_answer_format(out, hard=True) for out in output_strings]
        format_soft_results = [check_answer_format(out, hard=False) for out in output_strings]
        return fact_results, format_hard_results, format_soft_results
    return fact_results