from flask import Flask
from datetime import datetime

app = Flask(__name__)

@app.route("/")
def index():
    now = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    return f"""
    <!doctype html>
    <html lang="en">
      <head>
        <meta charset="utf-8">
        <title>Current Date and Time</title>
      </head>
      <body>
        <h1>Current Date and Time</h1>
        <p>{now}</p>
      </body>
    </html>
    """

if __name__ == "__main__":
    app.run(debug=True)