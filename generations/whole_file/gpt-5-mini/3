def is_prime(n):
    """Return True if n is a prime number, False otherwise.

    This function expects n to be an integer. For n <= 1 the function
    returns False. Uses 6k Â± 1 optimization for trial division.
    """
    if not isinstance(n, int):
        raise TypeError("is_prime() expects an integer")
    if n <= 1:
        return False
    if n <= 3:
        return True
    if n % 2 == 0 or n % 3 == 0:
        return False

    i = 5
    # Check divisors of form 6k-1 and 6k+1 up to sqrt(n)
    while i * i <= n:
        if n % i == 0 or n % (i + 2) == 0:
            return False
        i += 6
    return True