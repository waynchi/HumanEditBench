from sklearn.cluster import KMeans
from sklearn.metrics import silhouette_score
import numpy as np
import matplotlib.pyplot as plt

def cluster_data(features_transformed, cluster_columns_dict, n_clusters=2, clustering_method='kmeans'):
    """
    Выполняет кластеризацию данных.

    Args:
        features_transformed (pandas.DataFrame): Преобразованный DataFrame с параметрами.
        cluster_columns_dict (dict): Словарь, где ключи - имена столбцов для меток кластеров, 
                                      а значения - кортежи столбцов для кластеризации.
        n_clusters (int): Количество кластеров.
        clustering_method (str): Метод кластеризации ('kmeans').

    Returns:
        pandas.DataFrame: DataFrame с добавленными столбцами меток кластеров.
    """
    if features_transformed is None:
        print("Сначала выполните преобразование данных (этап 5).")
        return None

    for cluster_feature_name, columns in cluster_columns_dict.items():
        features_for_clustering = features_transformed[columns].copy()

        if clustering_method == 'kmeans':
            model = KMeans(n_clusters=n_clusters, random_state=42, n_init=10)
            cluster_labels = model.fit_predict(features_for_clustering)
            
            # Оценка качества кластеризации (например, с помощью коэффициента силуэта)
            if len(np.unique(cluster_labels)) > 1: # Проверка на случай, когда все точки отнесены к одному кластеру
                silhouette_avg = silhouette_score(features_for_clustering, cluster_labels)
                print(f"Коэффициент силуэта для {n_clusters} кластеров в столбцах {columns}: {silhouette_avg:.4f}")
            else:
                print(f"Невозможно рассчитать коэффициент силуэта для {n_clusters} кластера (все точки в одном кластере) в столбцах {columns}.")

        else:
            print("Неподдерживаемый метод кластеризации.")
            return None

        features_transformed[cluster_feature_name] = cluster_labels
        print(f"Кластеризация выполнена для столбцов {columns}. Метки кластеров добавлены в столбец '{cluster_feature_name}'.")

    return features_transformed

# Выполнение кластеризации (после этапа 5 и до этапа 6)
if 'features_transformed' in locals() and features_transformed is not None:
    cluster_columns_dict = {
        'cluster1': ('column1', 'column2'), 
        'cluster2': ('column3',)
    }  
    n_clusters = 3  # Количество кластеров (подберите оптимальное значение)
    features_transformed = cluster_data(features_transformed, cluster_columns_dict, n_clusters)
    
    # Визуализация кластеров (пример для случая, когда есть 2 числовых признака)
    for cluster_feature_name, columns in cluster_columns_dict.items():
        numerical_features = features_transformed[columns]
        if len(columns) >= 2:
            plt.figure(figsize=(8, 6))
            plt.scatter(numerical_features.iloc[:, 0], numerical_features.iloc[:, 1], c=features_transformed[cluster_feature_name], cmap='viridis')
            plt.xlabel(columns[0])
            plt.ylabel(columns[1])
            plt.title(f'Результаты кластеризации для столбцов {columns}')
            plt.colorbar(label='Номер кластера')
            plt.show()
        else:
            print(f"Недостаточно числовых признаков для визуализации кластеров на плоскости для столбцов {columns}.")
else:
    print("Сначала выполните этап 5 (Преобразование данных).")