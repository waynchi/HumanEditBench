const express = require("express");
const bodyParser = require("body-parser");
const cors = require("cors");
const fs = require("fs");
const path = require("path");
require("dotenv").config();

const app = express();
const PORT = process.env.PORT || 3000;

// 用于存储数据的 JSON 文件路径
const DB_FILE = path.join(__dirname, "database.json");

// 如果 JSON 文件不存在则初始化
if (!fs.existsSync(DB_FILE)) {
  fs.writeFileSync(DB_FILE, JSON.stringify({ appointments: [], reminders: [] }, null, 2));
}

// 辅助函数用于从 JSON 文件读取数据
const readDatabase = () => {
  const data = fs.readFileSync(DB_FILE, "utf-8");
  return JSON.parse(data);
};

// “辅助函数用于将数据写入 JSON 文件”
const writeDatabase = (data) => {
  fs.writeFileSync(DB_FILE, JSON.stringify(data, null, 2));
};

// 中间件
app.use(cors());
app.use(bodyParser.json());
app.use(bodyParser.urlencoded({ extended: true }));

// 路由

// 健康检查
app.get("/", (req, res) => {
  res.status(200).send("API is working!");
});

// 定期清理过期令牌的中间件
const tokenStore = {};
setInterval(() => {
  const now = Date.now();
  for (const token in tokenStore) {
    if (tokenStore[token].expiresAt < now) {
      delete tokenStore[token]; // 删除过期的令牌
    }
  }
}, 60000); // 每分钟运行清理

// 辅助函数用于生成一个8字符的随机字母数字令牌
function generateSimpleToken() {
  const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
  let token = "";
  for (let i = 0; i < 8; i++) {
    token += chars.charAt(Math.floor(Math.random() * chars.length));
  }
  return token;
}

// 更新 /generate-token
app.get("/generate-token", (req, res) => {
  const { phone, name, chat } = req.query;
  if (!phone || !name || !chat) {
    return res.status(400).json({ error: "Phone, Name, and Chatbot are required" });
  }

  try {
    const token = generateSimpleToken(); // 生成一个令牌
    const expiresAt = Date.now() + 15 * 60 * 1000; // 将过期时间设置为从现在起15分钟
    tokenStore[token] = { phone, name, chat, expiresAt }; // 将令牌与电话号码和姓名一起存储
    res.json({ token });
  } catch (error) {
    console.error("Error generating token:", error);
    res.status(500).json({ error: "Internal Server Error" });
  }
});

// 更新 /validate-token
app.get("/validate-token", (req, res) => {
  const { token } = req.query;
  if (!token) return res.status(400).json({ error: "Token is required" });

  try {
    const data = tokenStore[token];
    if (!data) throw new Error("Token not found");

    if (Date.now() > data.expiresAt) {
      delete tokenStore[token]; // 删除过期的令牌
      throw new Error("Token has expired");
    }

    res.json(data); // 响应包含电话、姓名和聊天机器人
  } catch (error) {
    console.error("Invalid token:", error);
    res.status(401).json({ error: "Invalid or expired token" });
  }
});


// 检查电话号码是否存在
app.get("/check-phone/:phone", (req, res) => {
  const { phone } = req.params;
  const { chatBotNumber } = req.query;

  if (!chatBotNumber) {
    return res.status(400).json({ error: "Chatbot number is required" });
  }

  const db = readDatabase();
  const appointment = db.appointments.find(
    (a) => a.phone === phone && a.chatBotNumber === chatBotNumber
  );

  if (appointment) {
    res.json({ exists: true, appointment });
  } else {
    res.json({ exists: false });
  }
});

// 添加或更新提醒
const addOrUpdateReminder = (appointment) => {
    const db = readDatabase();
    const appointmentDateTime = new Date(`${appointment.date}T${appointment.time}`);
    const alertTime = new Date(appointmentDateTime.getTime() - 60 * 60 * 1000); // 提前1小时
  
  const existingIndex = db.reminders.findIndex((r) => r.appointmentId === appointment.id);
  
    if (existingIndex >= 0) {
      // 更新现有提醒
      db.reminders[existingIndex].alertTime = alertTime;
      db.reminders[existingIndex].status = "pending";
    } else {
      // 添加新提醒
      db.reminders.push({
      appointmentId: appointment.id,
        alertTime,
        status: "pending"
      });
    }
  
    writeDatabase(db);
  };
  
// 提交或更新预订
app.post("/submit-booking", (req, res) => {
  const { name, phone, service, time, date, notes, token } = req.body;

  if (!name || !phone || !service || !time || !date) {
    return res.status(400).json({ error: "All fields are required!" });
  }

  const db = readDatabase();
  const existingIndex = db.appointments.findIndex((a) => a.phone === phone && a.chatBotNumber === tokenStore[token]?.chat);

  // 使用时间戳和随机字符串生成唯一的预约ID
  const appointmentId = `${Date.now()}-${Math.random().toString(36).substr(2, 9)}`;

  const appointment = {
    id: appointmentId,
    name,
    phone,
    service,
    time,
    date,
    notes,
    chatBotNumber: tokenStore[token]?.chat
  };

  if (existingIndex >= 0) {
    db.appointments[existingIndex] = appointment; // 更新现有预约
  } else {
    db.appointments.push(appointment); // 添加新预约
  }
  writeDatabase(db);
  addOrUpdateReminder(appointment);
  delete tokenStore[token]; // 使用后删除令牌

  res.json({ message: "Appointment saved successfully!", appointment });
});

// 修改现有预约
app.post("/modify-appointment", (req, res) => {
  const { phone, name, service, time, date, notes, token } = req.body;

  const db = readDatabase();
  const appointmentIndex = db.appointments.findIndex((a) => a.phone === phone);

  if (appointmentIndex === -1) {
    return res.status(404).json({ error: "Appointment not found!" });
  }

  const updatedAppointment = {
    ...db.appointments[appointmentIndex],
    name,
    service,
    time,
    date,
    notes,
  };

  db.appointments[appointmentIndex] = updatedAppointment;
  addOrUpdateReminder(updatedAppointment);
  writeDatabase(db);
  
  delete tokenStore[token]; // 成功修改后移除令牌

  res.json({ message: "Appointment updated successfully!" });
});

// 通过电话号码获取预约的端点
app.get("/appointment/:phone", (req, res) => {
    const { phone } = req.params;
    const { chatBotNumber } = req.query;
  
    if (!chatBotNumber) {
      return res.status(400).json({ error: "Chatbot number is required" });
    }
  
    const db = readDatabase();
    const appointment = db.appointments.find(
      (a) => a.phone === phone && a.chatBotNumber === chatBotNumber
    );
  
    if (appointment) {
      res.status(200).json(appointment); // 返回预约详情
    } else {
      res.status(404).json({ error: "Appointment not found!" }); // 处理未找到情况
    }
  });
  

// 删除提醒
const removeReminder = (phone) => {
    const db = readDatabase();
    db.reminders = db.reminders.filter((r) => r.appointmentId !== phone);
    writeDatabase(db);
  };

// 取消预约
app.post("/cancel-appointment", (req, res) => {
  const { phone, token } = req.body;

  if (!tokenStore[token]?.chat) {
    return res.status(401).json({ error: "Invalid token or missing chatbot number" });
  }

  const db = readDatabase();
  const appointmentIndex = db.appointments.findIndex(
    (a) => a.phone === phone && a.chatBotNumber === tokenStore[token].chat
  );

  if (appointmentIndex === -1) {
    return res.status(404).json({ error: "Appointment not found!" });
  }

  db.appointments.splice(appointmentIndex, 1); // 删除预约
  writeDatabase(db);
  removeReminder(phone);

  delete tokenStore[token]; // 成功取消后移除令牌
  res.json({ message: "Appointment canceled successfully!" });
});

// 集中错误处理程序
app.use((err, req, res, next) => {
  console.error("Error occurred:", err.message);
  res.status(500).json({ error: "Internal Server Error" });
});

// 启动服务器
app.listen(PORT, () => {
  console.log(`Server running on http://localhost:${PORT}`);
});