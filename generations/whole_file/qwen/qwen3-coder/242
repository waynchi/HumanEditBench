# Написать бинарный поиск

def binary_search(arr, target):
    """
    Binary search implementation
    :param arr: sorted array
    :param target: element to find
    :return: index of target element, or -1 if not found
    """
    left = 0
    right = len(arr) - 1
    
    while left <= right:
        mid = (left + right) // 2
        if arr[mid] == target:
            return mid
        elif arr[mid] < target:
            left = mid + 1
        else:
            right = mid - 1
    
    return -1