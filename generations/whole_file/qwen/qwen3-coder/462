# Un PROGRAMA que consulta el diccionario en inglés y el usuario puede pedir una palabra con N caracteres. 
# El programa imprimirá 10 palabras con este número de caracteres.

import random

# Diccionario de ejemplo con palabras en inglés
dictionary = [
    "cat", "dog", "house", "car", "tree", "book", "chair", "table", "computer", "phone",
    "bicycle", "mountain", "river", "ocean", "sky", "sun", "moon", "star", "flower", "garden",
    "school", "teacher", "student", "library", "music", "movie", "theater", "restaurant", "hospital", "doctor",
    "computer", "keyboard", "mouse", "screen", "window", "door", "wall", "floor", "ceiling", "light",
    "water", "fire", "earth", "wind", "rain", "snow", "ice", "heat", "cold", "warm"
]

def get_words_with_n_characters(n):
    """Obtiene palabras con exactamente n caracteres"""
    words_with_n_chars = [word for word in dictionary if len(word) == n]
    return words_with_n_chars

def main():
    try:
        # Solicitar al usuario el número de caracteres
        n = int(input("Ingrese el número de caracteres que desea buscar: "))
        
        # Obtener palabras con N caracteres
        words = get_words_with_n_characters(n)
        
        if len(words) == 0:
            print(f"No se encontraron palabras con {n} caracteres.")
        else:
            # Si hay menos de 10 palabras, mostrar todas
            # Si hay más de 10, mostrar 10 aleatorias
            if len(words) <= 10:
                print(f"Palabras con {n} caracteres:")
                for word in words:
                    print(f"- {word}")
            else:
                # Seleccionar 10 palabras aleatorias
                selected_words = random.sample(words, 10)
                print(f"10 palabras aleatorias con {n} caracteres:")
                for word in selected_words:
                    print(f"- {word}")
                    
    except ValueError:
        print("Por favor, ingrese un número válido.")

if __name__ == "__main__":
    main()