from main13 import knn, mlp
import pandas as pd

for pclass in [1, 2, 3]:
    for fare in range(10, 200, 10):
        for embarked in ["S", "Q", "C"]:
            # Создаём DataFrame из списка словарей, чтобы гарантировать корректную запись
            my_df = pd.DataFrame([{
                "Pclass": pclass,
                "Name": "TestName",
                "Sex": 0,
                "Age": 19,
                "SibSp": 0,
                "Parch": 0,
                "Fare": fare,
                "Embarked": embarked
            }])

            my_df = pd.get_dummies(my_df, columns=["Embarked"], prefix="Embarked")  # one‑hot

            # Если столбцы типов bool, приводим их к целочисленным 0/1
            for col in ["Embarked_S", "Embarked_C", "Embarked_Q"]:
                if col in my_df.columns:
                    my_df[col] = my_df[col].astype(int)

            print(f"""-------------------------------------------------------
                  Параметры: класс {pclass}, плата {fare}, embarked {embarked}
                  По knn: {knn.predict(my_df)}
                  По mlp: {mlp.predict(my_df)}""")