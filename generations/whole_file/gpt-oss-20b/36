import numpy as np

def linear_regression_gradient_descent(
    X: np.ndarray, y: np.ndarray, alpha: float, iterations: int
) -> np.ndarray:
    # Make y a column vector to enable proper broadcasting
    y_col = y.reshape(-1, 1)

    m, n = X.shape
    theta = np.zeros((n, 1))

    for _ in range(iterations):
        # Compute gradient with proper matrix dimensions
        gradient = (1 / m) * X.T @ (X @ theta - y_col)
        theta -= alpha * gradient

    # Return rounded theta for cleaner output
    return np.round(theta, 4)

print(
    linear_regression_gradient_descent(
        np.array([[1, 1], [1, 2], [1, 3]]), np.array([1, 2, 3]), 0.01, 1000
    )
)
