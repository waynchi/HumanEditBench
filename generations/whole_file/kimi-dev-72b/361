# Liczby, które można wyrazić jako sumę czterech niezerowych kwadratów:

def find_numbers_as_sum_of_four_squares(n):
    results = []
    for i in range(1, int(n**0.5) + 1):
        for j in range(i, int((n - i**2)**0.5) + 1):
            for k in range(j, int((n - i**2 - j**2)**0.5) + 1):
                l = int((n - i**2 - j**2 - k**2)**0.5)
                if i**2 + j**2 + k**2 + l**2 == n and l >= k:
                    results.append((i, j, k, l))
    return results

n = 50
print(find_numbers_as_sum_of_four_squares(n))