import numpy as np

from manim import *

class MaroAnimation(Scene):
    def construct(self):
        # Создать текст
        text = Text("Maro", font_size=120)
        
        # Добавить красивый цветовой градиент
        text.set_color_by_gradient(BLUE, PURPLE, PINK)
        
        # Создать последовательность анимации
        self.play(
            Write(text, run_time=2),
            rate_func=smooth
        )
        
        # Добавить мягкую анимацию пульсации
        self.play(
            text.animate.scale(1.2),
            rate_func=there_and_back,
            run_time=1.5
        )
        
        # Добавьте легкое вращение для стиля
        self.play(
            text.animate.rotate(PI/12).shift(UP * 0.5),
            rate_func=ease_in_out_sine,
            run_time=1
        )
        
        # Удерживать последний кадр
        self.wait(2)