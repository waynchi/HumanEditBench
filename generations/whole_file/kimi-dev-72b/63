
python
from sklearn.cluster import KMeans
from sklearn.metrics import silhouette_score

def cluster_data(features_transformed, cluster_columns, n_clusters=2, clustering_method='kmeans'):
    """
    Выполняет кластеризацию данных для указанных наборов столбцов.

    Args:
        features_transformed (pandas.DataFrame): Преобразованный DataFrame с параметрами.
        cluster_columns (dict): Словарь, где ключ - имя столбца меток кластеров, значение - кортеж столбцов для кластеризации.
        n_clusters (int): Количество кластеров.
        clustering_method (str): Метод кластеризации ('kmeans').

    Returns:
        pandas.DataFrame: DataFrame с добавленными столбцами меток кластеров.
    """
    if features_transformed is None:
        print("Сначала выполните преобразование данных (этап 5).")
        return None

    for cluster_name, columns in cluster_columns.items():
        print(f"Кластеризация для '{cluster_name}' с колонками {columns}...")

        # Проверяем, что все столбцы существуют
        missing_cols = [col for col in columns if col not in features_transformed.columns]
        if missing_cols:
            print(f"Ошибка: следующие столбцы отсутствуют: {missing_cols}")
            continue

        features_for_clustering = features_transformed[columns]

        if clustering_method == 'kmeans':
            model = KMeans(n_clusters=n_clusters, random_state=42, n_init=10)
            cluster_labels = model.fit_predict(features_for_clustering)
            
            # Оценка качества
            unique_labels = np.unique(cluster_labels)
            if len(unique_labels) > 1:
                silhouette_avg = silhouette_score(features_for_clustering, cluster_labels)
                print(f"Коэффициент силуэта: {silhouette_avg:.4f}")
            else:
                print(f"Невозможно рассчитать силуэт (один кластер).")
        else:
            print("Неподдерживаемый метод кластеризации.")
            continue

        # Добавляем метки в DataFrame
        features_transformed[cluster_name] = cluster_labels
        print(f"Метки добавлены в '{cluster_name}'.")

    return features_transformed

# Выполнение кластеризации (после этапа 5 и до этапа 6)
if 'features_transformed' in locals() and features_transformed is not None:
    # Задаем словарь кластеров: {новое имя столбца: (столбцы для кластеризации)}
    cluster_columns = {
        'cluster': features_transformed.columns.tolist()  # Кластеризация по всем столбцам
    }
    n_clusters = 3  # Количество кластеров (по умолчанию 2)
    features_transformed = cluster_data(features_transformed, cluster_columns, n_clusters)
    
    # Визуализация кластеров (пример для случая, когда есть 2 числовых признака)
    numerical_features = features_transformed.select_dtypes(include=np.number)
    if numerical_features.shape[1] >= 2:
        plt.figure(figsize=(8, 6))
        plt.scatter(numerical_features.iloc[:, 0], numerical_features.iloc[:, 1], c=features_transformed['cluster'], cmap='viridis')
        plt.xlabel(numerical_features.columns[0])
        plt.ylabel(numerical_features.columns[1])
        plt.title('Результаты кластеризации')
        plt.colorbar(label='Номер кластера')
        plt.show()
    else:
        print("Недостаточно числовых признаков для визуализации.")
else:
    print("Сначала выполните этап 5 (Преобразование данных).")