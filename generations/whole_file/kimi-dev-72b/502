import numpy as np

from manim import *

class MaroAnimation(Scene):
    def construct(self):
        # Crea el texto
        text = Text("Maro", font_size=120)
        
        # Añadir un bonito degradado de color
        text.set_color_by_gradient(BLUE, PURPLE, PINK)
        
        # Crea la secuencia de animación
        self.play(
            Write(text, run_time=2),
            rate_func=smooth
        )
        
        # Añadir una animación de pulso suave
        self.play(
            text.animate.scale(1.2),
            rate_func=there_and_back,
            run_time=1.5
        )
        
        # Añadir una ligera rotación para estilo
        self.play(
            text.animate.rotate(PI/12).shift(UP * 0.5),
            rate_func=ease_in_out_sine,
            run_time=1
        )
        
        # Mantener el fotograma final
        self.wait(2)