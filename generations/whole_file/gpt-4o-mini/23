import random
import nltk
from nltk.corpus import words

# Ensure that you have downloaded the words corpus from nltk
# nltk.download('words')

def get_words_with_length(n):
    word_list = words.words()
    filtered_words = [word for word in word_list if len(word) == n]
    return random.sample(filtered_words, min(10, len(filtered_words)))

# Main program loop
while True:
    user_input = input("Enter the number of characters you want in a word (or type 'exit' to quit): ")
    if user_input.lower() == 'exit':
        break
    
    try:
        n = int(user_input)
        if n <= 0:
            print("Please enter a positive integer.")
            continue
        
        result_words = get_words_with_length(n)
        if result_words:
            print(f"Here are 10 words with {n} characters:")
            for word in result_words:
                print(word)
        else:
            print(f"No words found with {n} characters.")
    except ValueError:
        print("Please enter a valid integer.")