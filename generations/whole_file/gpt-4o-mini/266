from beem.discussions import Discussions, Query
from beem.comment import Comment
import random
import string

n_respuestas_minimas = 5
diccionario = {}

def procesar (texto: str):
    return "count me " in texto

def is_own_author (autor: str):
    return autor == 'subidu'

def is_banned (autor: str):
    list_banned = []
    return autor in list_banned

def generar_permlink_unico () -> str:
    return "".join(random.choices(string.digits, k=10))

def procesar_replies (replies: Comment):
    pass

def preparar_comentario (parent_author: str, parent_permlink: str, permlink: str, title: str = '', author: str = 'subidu' , body: str = 'Count me in ^^ @subidu') -> dict[str:str]:
    return {
        "parent_author": parent_author,
        "parent_permlink": parent_permlink,
        "author": author,
        "permlink": permlink,
        "title": title,
        "body": body,
    }

def crear_jerarquia(posts):
    hierarchy = {}
    for post in posts:
        post_author = post['author']
        post_permlink = post['permlink']
        post_replies = post['children']
        hierarchy[post_permlink] = {
            'author': post_author,
            'children': {}
        }
        if post_replies > n_respuestas_minimas:
            comment = Comment(authorperm=f"{post_author}/{post_permlink}")
            replies = comment.get_replies()
            for reply in replies:
                hierarchy[post_permlink]['children'][reply['permlink']] = {
                    'author': reply['author'],
                    'body': reply['body']
                }
    return hierarchy

q = Query()
d = Discussions()
posts_generator = d.get_discussions("created", q, limit=6000)
X = 0

posts_hierarchy = crear_jerarquia(posts_generator)

for post_permlink, post_info in posts_hierarchy.items():
    post_author = post_info['author']
    post_replies = post_info['children']
    cnt = 0
    X += 1
    if len(post_replies) > n_respuestas_minimas:
        for replies_permlink, replies_info in post_replies.items():
            author = replies_info['author']
            text = replies_info['body']
            if is_own_author(author):
                # Reevaluar el comentario
                break
            if is_banned(author):
                break
            if procesar(text):
                cnt += 1
    if cnt > 3:
        print("Iterador: ", X)
        print(author, '/', replies_permlink)