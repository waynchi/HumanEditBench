def sum_of_four_squares(n):
    results = []
    for a in range(1, int(n**0.5) + 1):
        for b in range(1, int(n**0.5) + 1):
            for c in range(1, int(n**0.5) + 1):
                for d in range(1, int(n**0.5) + 1):
                    if a**2 + b**2 + c**2 + d**2 == n:
                        results.append((a, b, c, d))
    return results

# Test the function with a specific number
number = 30  # Example number
combinations = sum_of_four_squares(number)
print(f"Liczby, które można wyrazić jako sumę czterech niezerowych kwadratów dla {number}:")
for combo in combinations:
    print(combo)