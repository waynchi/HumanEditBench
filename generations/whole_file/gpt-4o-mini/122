from main13 import knn, mlp
import pandas as pd

for pclass in range(1, 4):  # Changed to range(1, 4) for better readability
    for fare in range(10, 201, 10):  # Changed range to include 200
        for embarked in ["S", "Q", "C"]:
            my_df = pd.DataFrame({"Pclass": [pclass],  # Changed to list to avoid index errors
                                "Name": [24],  # Changed to list to avoid index errors
                                "Sex": [0],  # Changed to list to avoid index errors
                                "Age": [19],  # Changed to list to avoid index errors
                                "SibSp": [0],  # Changed to list to avoid index errors
                                "Parch": [0],  # Changed to list to avoid index errors
                                "Fare": [fare],  # Changed to list to avoid index errors
                                "Embarked": [embarked]  # Changed to list to avoid index errors
                                })
            my_df = pd.get_dummies(my_df, columns=["Embarked"], prefix="Embarked") # doing one-hot
            if "Embarked_S" in my_df.columns:
                my_df["Embarked_S"] = my_df["Embarked_S"].map({True: 1, False: 0})
            if "Embarked_C" in my_df.columns:
                my_df["Embarked_C"] = my_df["Embarked_C"].map({True: 1, False: 0})
            if "Embarked_Q" in my_df.columns:
                my_df["Embarked_Q"] = my_df["Embarked_Q"].map({True: 1, False: 0})

            print(f"""-------------------------------------------------------
                  Параметры: класс {pclass}, плата {fare}, embarked {embarked}
                  По knn: {knn.predict(my_df)}
                  По mlp: {mlp.predict(my_df)}""")