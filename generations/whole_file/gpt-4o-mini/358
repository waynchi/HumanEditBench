from langchain.chat_models import ChatOpenAI

import json

# Initialize the ChatOpenAI model
model = ChatOpenAI(model="llama3.2", temperature=0)

with open("Vuori_Final_Approval_2024_09_24.json", "r") as file:
    shap_values_json = json.load(file).get("shap_values")
with open("system.prompt", "r") as file:
    sys_prompt = file.read().strip()

prompt = f"""
{shap_values_json}
"""

# Generate response using the LangChain model
response = model.chat(
    messages=[
        {"role": "system", "content": sys_prompt},
        {"role": "user", "content": prompt},
    ],
)

print(response["content"])