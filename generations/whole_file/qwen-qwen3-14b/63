from sklearn.cluster import KMeans
from sklearn.metrics import silhouette_score
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

def cluster_data(features_transformed, cluster_dict, clustering_method='kmeans'):
    """
    Выполняет кластеризацию данных независимо для указанных наборов столбцов.

    Args:
        features_transformed (pandas.DataFrame): Преобразованный DataFrame с параметрами.
        cluster_dict (dict): Словарь, где ключ - имя нового столбца, а значение - кортеж с именами столбцов для кластеризации.
        clustering_method (str): Метод кластеризации ('kmeans').

    Returns:
        pandas.DataFrame: DataFrame с добавленными столбцами меток кластеров.
    """
    if features_transformed is None:
        print("Сначала выполните преобразование данных (этап 5).")
        return None

    features_for_clustering = features_transformed.copy()

    for cluster_name, columns in cluster_dict.items():
        if not all(col in features_for_clustering.columns for col in columns):
            print(f"Один или несколько столбцов для кластеризации '{cluster_name}' отсутствуют в DataFrame.")
            continue

        if len(columns) < 1:
            print(f"Для кластеризации '{cluster_name}' необходимо как минимум один столбец.")
            continue

        data_subset = features_for_clustering[columns]

        if clustering_method == 'kmeans':
            n_clusters = len(np.unique(features_for_clustering[columns].apply(tuple, axis=1))) if len(columns) == 1 else 2
            model = KMeans(n_clusters=n_clusters, random_state=42, n_init=10)
            cluster_labels = model.fit_predict(data_subset)

            # Оценка качества кластеризации (например, с помощью коэффициента силуэта)
            if len(np.unique(cluster_labels)) > 1:  # Проверка на случай, когда все точки отнесены к одному кластеру
                silhouette_avg = silhouette_score(data_subset, cluster_labels)
                print(f"Коэффициент силуэта для {n_clusters} кластеров при кластеризации '{cluster_name}': {silhouette_avg:.4f}")
            else:
                print(f"Невозможно рассчитать коэффициент силуэта для {n_clusters} кластера при кластеризации '{cluster_name}' (все точки в одном кластере).")

        else:
            print(f"Неподдерживаемый метод кластеризации для '{cluster_name}'.")
            continue

        features_for_clustering[cluster_name] = cluster_labels
        print(f"Кластеризация для '{cluster_name}' выполнена. Метки кластеров добавлены в столбец '{cluster_name}'.")

    return features_for_clustering

# Выполнение кластеризации (после этапа 5 и до этапа 6)
if 'features_transformed' in locals() and features_transformed is not None:
    cluster_dict = {
        'cluster1': ('столбец1', 'столбец2'),  # Пример: кластеризация по двум числительным столбцам
        'cluster2': ('столбец3',)              # Пример: кластеризация по одному численному столбцу
    }
    features_transformed = cluster_data(features_transformed, cluster_dict)

    # Визуализация кластеров (пример для случая, когда есть 2 числовых признака)
    numerical_features = features_transformed.select_dtypes(include=np.number)
    if numerical_features.shape[1] >= 2:
        plt.figure(figsize=(8, 6))
        plt.scatter(numerical_features.iloc[:, 0], numerical_features.iloc[:, 1], c=features_transformed['cluster1'], cmap='viridis')
        plt.xlabel(numerical_features.columns[0])
        plt.ylabel(numerical_features.columns[1])
        plt.title('Результаты кластеризации')
        plt.colorbar(label='Номер кластера')
        plt.show()
    else:
        print("Недостаточно числовых признаков для визуализации кластеров на плоскости.")
else:
    print("Сначала выполните этап 5 (Преобразование данных).")