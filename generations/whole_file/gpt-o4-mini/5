# Write binary search

def binary_search(arr, target):
    """
    Perform binary search on a sorted list.
    Returns the index of target if found, otherwise returns -1.
    """
    left, right = 0, len(arr) - 1
    while left <= right:
        mid = (left + right) // 2
        if arr[mid] == target:
            return mid
        elif arr[mid] < target:
            left = mid + 1
        else:
            right = mid - 1
    return -1


# Example usage
if __name__ == "__main__":
    nums = [1, 3, 5, 7, 9, 11, 13]
    print(binary_search(nums, 7))   # Expected output: 3
    print(binary_search(nums, 4))   # Expected output: -1