import os
# 导入 hashlib
# 导入 base64

project_name = "CheckerKMV"


def createLicense(secretKey: str) -> None:
    # 项目文件夹在 %localappdata% 的路径
    localappdata_path = os.path.join(os.environ["LOCALAPPDATA"], project_name)

    if not os.path.exists(localappdata_path):
        os.makedirs(localappdata_path)

    with open(os.path.join(localappdata_path, "license.dat"), "wb") as f:
        # 使用base64编码secretKey
        import base64
        encoded_secretKey = base64.b64encode(secretKey.encode())
        f.write(encoded_secretKey)

