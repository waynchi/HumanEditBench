import os
import hashlib
import base64

project_name = "CheckerKMV"


def createLicense(secretKey: str) -> None:
    # Ruta a la carpeta del proyecto en %appdata%/Local
    appdata_path = os.path.join(os.environ["LOCALAPPDATA"], project_name)

    if not os.path.exists(appdata_path):
        os.makedirs(appdata_path)

    hashed_secret_key = hashlib.sha256(secretKey.encode()).digest()
    encoded_secret_key = base64.b64encode(hashed_secret_key)

    with open(os.path.join(appdata_path, "license.dat"), "wb") as f:
        f.write(encoded_secret_key)
