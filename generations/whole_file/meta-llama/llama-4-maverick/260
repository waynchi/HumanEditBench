import numpy as np

def conjugate_gradient(A, b, x0=None, tol=1e-10, max_iter=1000):
    """
    Solve Ax = b using the Conjugate Gradient method.

    Parameters:
    A (numpy array): Symmetric positive-definite matrix.
    b (numpy array): Right-hand side vector.
    x0 (numpy array, optional): Initial guess. Defaults to None.
    tol (float, optional): Tolerance for convergence. Defaults to 1e-10.
    max_iter (int, optional): Maximum number of iterations. Defaults to 1000.

    Returns:
    numpy array: Solution vector x.
    """
    n = len(b)
    if x0 is None:
        x = np.zeros(n)
    else:
        x = x0
    
    r = b - np.dot(A, x)
    p = r.copy()
    rsold = np.dot(r, r)

    for _ in range(max_iter):
        Ap = np.dot(A, p)
        alpha = rsold / np.dot(p, Ap)
        x += alpha * p
        r -= alpha * Ap
        rsnew = np.dot(r, r)
        
        if np.sqrt(rsnew) < tol:
            break
        
        p = r + (rsnew / rsold) * p
        rsold = rsnew
    
    return x

# Example usage:
if __name__ == "__main__":
    # Define a symmetric positive-definite matrix A
    A = np.array([[4, 1], [1, 3]])
    b = np.array([1, 2])
    
    x = conjugate_gradient(A, b)
    print("Solution:", x)