from langchain_ollama import ChatOllama
from langchain_core.prompts.chat import ChatPromptTemplate
import json

def generate_response(shap_values_json_file="Vuori_Final_Approval_2024_09_24.json", 
                     system_prompt_file="system.prompt", 
                     model="llama3.2", 
                     base_url="http://localhost:11434"):
    """
    Generate a response from the ChatOllama model based on user input.

    Args:
        shap_values_json_file (str): The file path to the SHAP values JSON file.
        system_prompt_file (str): The file path to the system prompt file.
        model (str): The name of the ChatOllama model.
        base_url (str): The base URL of the ChatOllama API.

    Returns:
        str: The response from the ChatOllama model.
    """

    # Initialize the ChatOllama model
    chat_model = ChatOllama(model=model, base_url=base_url)

    # Load SHAP values from JSON file
    with open(shap_values_json_file, "r") as file:
        shap_values = json.load(file).get("shap_values")

    # Load system prompt from file
    with open(system_prompt_file, "r") as file:
        sys_prompt = file.read().strip()

    # Prepare the messages
    prompt = ChatPromptTemplate(
        [
            ("system", sys_prompt),
            ("human", "{user_input}"),
        ]
    )

    # Generate the response
    user_input = json.dumps(shap_values)  # Prepare user input

    chain = prompt | chat_model

    # Return the response
    return chain.invoke(user_input)

# Usage
response = generate_response()
print(response.content)