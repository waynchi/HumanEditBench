from langchain.llms import ChatLLaMA
from langchain.prompts import ChatPromptTemplate
import json

# 初始化 ChatLLaMA 模型
chat_model = ChatLLaMA(model="llama3.2", base_url="http://localhost:11434")

# 从 JSON 文件加载 SHAP 值
with open("Vuori_Final_Approval_2024_09_24.json", "r") as file:
    shap_values_json = json.load(file).get("shap_values")

# 从文件加载系统提示
with open("system.prompt", "r") as file:
    sys_prompt = file.read().strip()

# 准备消息
template = ChatPromptTemplate([
    ("system", sys_prompt),
    ("human", "{user_input}"),
])

# 生成响应
prompt_value = template.format(user_input=json.dumps(shap_values_json))

chain = chat_model(prompt_value)

# 打印响应
print(chain)
