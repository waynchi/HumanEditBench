import { messages } from "./messages.js";

$().ready(() => {
    const loading = $('.container-loading');
    const payment = $('.payment-section');
    const info = $('.user-info');
    const main = $('.main');

    // Retrieve values from localStorage using jQuery
    const storedData = localStorage.getItem('userData');
    if (storedData) {
        const userData = JSON.parse(storedData);
        const userInfo = $.parseJSON(userData.userInfo);
        const paymentInfo = $.parseJSON(userData.paymentInfo);
        console.log('User Info:', userInfo);
        console.log('Payment Info:', paymentInfo);
    } else {
        console.log('No user data found in local storage');
    }

    $('#generateTaxButton').click(() => {
        main.fadeOut(500);
        setTimeout(() => {
            loading.css('display', 'flex');

            let lastTimeout = 0;
            messages.forEach(message => {
                lastTimeout = lastTimeout + message.time;
            })
            console.log(`intervalo: ${lastTimeout}`)

            const loadMessages = $('#loading-messages');
            messages.forEach(element => {
                console.log(element.text)
                console.log(element.time)
                const timeout = element.time;
                setTimeout(() => {
                    loadMessages.text(element.text);
                }, timeout);
            });

            setTimeout(() => {
                console.log('pagamento');
                loading.css('display', 'none');
                payment.css('display', 'block');
                info.css('display', 'block');
            }, lastTimeout + 500);
        }, 200);
    });
});