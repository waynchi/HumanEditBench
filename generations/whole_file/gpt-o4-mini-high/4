from flask import Flask
from datetime import datetime

app = Flask(__name__)

@app.route('/')
def index():
    # --- Highlighted section start ---
    now = datetime.now().strftime('%Y-%m-%d %H:%M:%S')
    return f'Current date and time: {now}'
    # --- Highlighted section end ---

if __name__ == '__main__':
    app.run(debug=True)