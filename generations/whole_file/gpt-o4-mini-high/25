from langchain_ollama import ChatOllama
from langchain.prompts.chat import ChatPromptTemplate
import json

# Initialize the ChatOllama model
chat_model = ChatOllama(model="llama3.2", base_url="http://localhost:11434")

# Load SHAP values from JSON file
with open("Vuori_Final_Approval_2024_09_24.json", "r") as file:
    shap_values_json = json.load(file)["shap_values"]

# Load system prompt from file
with open("system.prompt", "r") as file:
    sys_prompt = file.read().strip()

# Prepare the prompt template
template = ChatPromptTemplate.from_messages([
    ("system", sys_prompt),
    ("human", "{user_input}")
])

# Format the prompt with SHAP values
prompt = template.format_prompt(user_input=json.dumps(shap_values_json))

# Generate the response
response = chat_model(prompt.to_messages())

# Print the response
print(response.content)