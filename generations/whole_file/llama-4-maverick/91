import os
# import hashlib
# import base64

project_name = "CheckerKMV"


def createLicense(secretKey: str) -> None:
    # Corrected the path to %appdata%/Roaming as %appdata% refers to Roaming
    appdata_path = os.path.join(os.environ.get("APPDATA", ""), project_name)

    if not os.path.exists(appdata_path):
        os.makedirs(appdata_path)

    # Encode the secretKey to bytes before writing it to a binary file
    with open(os.path.join(appdata_path, "license.dat"), "wb") as f:
        f.write(secretKey.encode())
