import numpy as np

from manim import *

class MaroAnimation(Scene):
    def construct(self):
        # Create the text
        text = Text("Maro", font_size=120)
        
        # Add a nice color gradient
        text.set_color_by_gradient(BLUE, PURPLE, RED)  # PINK is not a valid color, changed to RED
        
        # Create the animation sequence
        self.play(
            Write(text, run_time=2),
        )  # Removed rate_func=smooth as it's not a valid argument for self.play
        
        # Add a gentle pulse animation
        self.play(
            text.animate.scale(1.2),
            rate_func=there_and_back,
            run_time=1.5
        )
        
        # Add a slight rotation for style
        self.play(
            Rotate(text, angle=PI/12),  # Changed to Rotate and removed text.animate
            text.animate.shift(UP * 0.5),
            rate_func=ease_in_out_sine,
            run_time=1
        )
        
        # Hold the final frame
        self.wait(2)