import os
import time
import undetected_chromedriver as uc

# 获取当前脚本的目录
script_dir = os.path.dirname(os.path.abspath(__file__))

# 构建到 chromedriver 的相对路径
chromedriver_path = os.path.join(script_dir, "chromedriver-win64", "chromedriver.exe")

options = uc.ChromeOptions()
# 修复: 不要将 chromedriver 路径设置为 binary_location，应该设置为 Chrome 浏览器的路径
# Chrome 浏览器通常路径，如果不同请修改
chrome_path = r"C:\Program Files\Google\Chrome\Application\chrome.exe"
options.binary_location = chrome_path

print("wde")
with uc.Chrome(driver_executable_path=chromedriver_path, use_subprocess=True, options=options) as driver:
    print("wde")
    driver.get("https://lmarena.ai/")
    print("wde")
    # 为undetected_chromedriver创建一个ChromeOptions实例
    # 使用指定的选项初始化未检测的Chrome驱动程序
    time.sleep(10)
import time

options = uc.ChromeOptions()
# 修复同样的问题
options.binary_location = chrome_path
print("wde")
with uc.Chrome(driver_executable_path=chromedriver_path, use_subprocess=True, options=options) as driver:
    print("wde")
    driver.get("https://lmarena.ai/")
    print("wde")
    # 为 undetected_chromedriver 创建一个 ChromeOptions 实例
    # 使用指定的选项初始化未检测的Chrome驱动程序
    time.sleep(10)