from flask import Flask
from datetime import datetime

app = Flask(__name__)

@app.route('/')
def current_time():
    now = datetime.now()
    current_datetime = now.strftime("%Y-%m-%d %H:%M:%S")
    return f"<h1>Current Date and Time</h1><p>{current_datetime}</p>"

if __name__ == '__main__':
    app.run(debug=True)